{
  "builders": [
    {
      "type": "amazon-ebs",
      "region": "us-east-1",
      "source_ami": "ami-76817c1e",
      "instance_type": "t2.micro",
      "ssh_username": "ec2-user",
      "ami_name": "federation-demo/RP ({{timestamp}})"
    }
  ],
  "provisioners": [
    {
      "type": "file",
      "source": "target/cxf-fediz/plugins/tomcat/target/fediz-tomcat-\\*-zip-with-dependencies.zip",
      "destination": "/tmp/"
    },
    {
      "type": "file",
      "source": "target/keys/rp-ssl.jks",
      "destination": "/tmp/keystore.jks"
    },
    {
      "type": "file",
      "source": "tomcat/server.xml",
      "destination": "/tmp/"
    },
    {
      "type": "shell",
      "inline": [
        "sudo yum -y update",
        "sudo yum -y install tomcat7",
        "sudo chkconfig --add tomcat7",
        "sudo chkconfig tomcat7 on",
        "sudo mkdir /usr/share/tomcat7/lib/fediz",
        "sudo sed -i 's/\\(^common.loader=.*\\)/\\1,\\$\\{catalina.home\\}\\/lib\\/fediz\\/\\*\\.jar/' /usr/share/tomcat7/conf/catalina.properties",
        "sudo unzip /tmp/fediz-tomcat-\\*-zip-with-dependencies.zip -d /usr/share/tomcat7/lib/fediz/",
        "sudo cp /tmp/keystore.jks /usr/share/tomcat7",
        "sudo cp /tmp/server.xml /etc/tomcat7/server.xml"
      ]
    }
  ]
}
